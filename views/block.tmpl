{{define "block"}}
<!DOCTYPE html>
<html lang="en">
{{template "html-head" printf "Decred Block %d" .Height}}
<body>

    {{template "navbar"}}

    <div class="container">

        <div class="row justify-content-between">
            <div class="col-md-7 col-sm-6">
                <h4 class="mb-2">
                    Block #{{.Height}} {{ if gt .Confirmations 1 }}
                        <span class="op60 fs12">( {{.Confirmations}} confirmations)</span>
                    {{else}}
                        <span class="op60 fs12">best block</span>
                    {{end}}
                    <a class="fs12" href="/api/block/{{.Height}}/verbose?indent=true" data-turbolinks="false">view raw</a>
                </h4>
            </div>
            <div class="col-md-5 col-sm-6 d-flex">
                <table>
                    <tr class="h2rem">
                        <td class="pr-2 lh1rem vam text-right xs-w117">TOTAL SENT</td>
                        <td class="fs28 mono"><span class="dcr mr-1">{{.TotalSent}}</span><span class="fs18 vam">DCR</span></td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="row justify-content-between">
            <div class="col-md-7 col-sm-6 d-flex">
                <table class="">
                    <tr>
                        <td class="text-right pr-2 lh1rem vam nowrap xs-w117">BLOCK HASH</td>
                        <td>
                            <span class="hash break-word  lh1rem">{{.Hash}}</span>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-right pr-2 lh1rem vam nowrap"><a href="/explorer/block/{{.PreviousHash}}">PREV BLOCK</a></td>
                        <td>
                            <span class="hash break-word lh1rem"  href="/explorer/block/{{.PreviousHash}}">{{.PreviousHash}}</span>
                        </td>
                    </tr>
                    {{if .NextHash}}
                    <tr>
                        <td class="text-right pr-2 lh1rem vam nowrap"><a href="/explorer/block/{{.NextHash}}">NEXT BLOCK</a></td>
                        <td>
                            <span class="hash break-word lh1rem">{{.NextHash}}</span>
                        </td>
                    </tr>
                    {{else}}
                    <tr>
                        <td class="text-right pr-2 lh1rem vam nowrap">NEXT BLOCK</td>
                        <td>
                            <span class="lh1rem">&mdash;</span>
                        </td>
                    </tr>
                    {{end}}
                    <tr>
                        <td class="text-right pr-2 lh1rem nowrap p03rem0">BLOCK VERSION</td>
                        <td class="lh1rem">{{.Version}}</td>
                    </tr>
                    <tr>
                        <td class="text-right pr-2 lh1rem nowrap p03rem0" >STAKE VERSION</td>
                        <td class="lh1rem">{{.StakeVersion}}</td>
                    </tr>
                    <tr>
                        <td class="text-right pr-2 lh1rem nowrap p03rem0">VOTE BITS</td>
                        <td class="lh1rem">{{.VoteBits}}</td>
                    </tr>
                    <tr>
                        <td class="text-right pr-2 lh1rem nowrap p03rem0">FINAL STATE</td>
                        <td class="lh1rem">{{.FinalState}}</td>
                    </tr>
                    <tr>
                        <td class="text-right pr-2 lh1rem nowrap p03rem0">NONCE</td>
                        <td class="lh1rem">{{.Nonce}}</td>
                    </tr>
                    <tr>
                        <td class="text-right pr-2 lh1rem nowrap p03rem0">MERKLE ROOT</td>
                        <td><span class="lh1rem hash break-word">{{.MerkleRoot}}</span></td>
                    </tr>
                    <tr>
                        <td class="text-right pr-2 lh1rem nowrap p03rem0">STAKE ROOT</td>
                        <td><span class="lh1rem hash break-word">{{.StakeRoot}}</span></td>
                    </tr>
                </table>
            </div>

            <div class="col-md-5 col-sm-6 d-flex">
                <table class="">
                    <tr>
                        <td class="text-right lh1rem pr-2">TIME</td>
                        <td class="lh1rem" style="min-width: 178px ">
                            <span class="hidden timestamp">{{.BlockTime}}</span>
                            ({{timezone}}) {{.FormattedTime}} <span class="op60 fs12 nowrap">(<span class="age">{{.BlockTime}}</span> ago)</span>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-right pr-2 lh1rem">SIZE</td>
                        <td class="mono">{{.FormattedBytes}}</td>
                    </tr>
                    <tr>
                        <td class="text-right pr-2 lh1rem p03rem0"><a href="#votes">VOTES</a></td>
                        <td class="lh1rem">
                            {{.Voters}}
                        </td>
                    </tr>
                    <tr>
                        <td class="text-right pr-2 lh1rem p03rem0">
                            {{if gt .FreshStake  0 }}<a href="#tickets">TICKETS</a>{{else}}TICKETS{{end}}
                        </td>
                        <td class="lh1rem">
                            {{.FreshStake}}
                        </td>
                    </tr>
                    <tr>
                        <td class="text-right pr-2 lh1rem p03rem0">{{if gt .Revocations  0 }}<a href="#revocations">REVOCATIONS</a>{{else}}REVOCATIONS{{end}}</td>
                        <td class="lh1rem">
                            {{.Revocations}}
                        </td>
                    </tr>
                    <tr>
                        <td class="text-right pr-2 lh1rem p03rem0">{{if gt .Transactions  0 }}<a href="#transactions">TRANSACTIONS</a>{{else}}TRANSACTIONS{{end}}</td>
                        <td class="lh1rem">
                            {{.Transactions}}
                        </td>
                    </tr>
                    <tr>
                        <td class="text-right pr-2 lh1rem p03rem0">TICKET PRICE</td>
                        <td class="lh1rem">
                            {{.SBits}}
                        </td>
                    </tr>
                    <tr>
                        <td class="text-right pr-2 lh1rem nowrap p03rem0 p03rem0">POOL SIZE</td>
                        <td class="lh1rem">{{.PoolSize}}</td>
                    </tr>
                    <tr>
                        <td class="text-right pr-2 lh1rem nowrap p03rem0">POW DIFFICULTY</td>
                        <td class="lh1rem">
                            {{.Difficulty}}
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="row">
            <span class="anchor" id="votes"></span>
            <div class="col-md-12">
                <h4><span>Votes</span></h4>
                <table class="table table-sm striped">
                    <thead>
                        <th>Transactions ID</th>
                        <th>Version</th>
                        <th>Issue ID</th>
                        <th>Choice ID</th>
                        <th class="text-right">Total DCR</th>
                        <th>Size</th>
                    </thead>
                    <tbody>
                        {{range .Votes}}
                        <tr>
                            <td class="break-word">
                                <span>
                                    <a class="hash lh1rem" href="/explorer/tx/{{.TxID}}">{{.TxID}}</a>
                                </span>
                            </td>
                            <td class="mono fs15">{{.VoteInfo.Version}}</td>
                            <td class="mono fs15">{{if (len .VoteInfo.Choices) gt 0}}
                                {{(index .VoteInfo.Choices 0).ID}}
                            {{else}}
                                -
                            {{end}}</td>
                            <td class="mono fs15">{{if (len .VoteInfo.Choices) gt 0}}
                                {{(index .VoteInfo.Choices 0).Choice.Id}}
                            {{else}}
                                -
                            {{end}}</td>
                            <td class="dcr mono fs15 text-right">{{.FormattedTotal}}</td>
                            <td class="mono fs15">{{.FormattedSize}}</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <span class="anchor" id="tickets"></span>
            <div class="col-md-12">
                <h4><span>Tickets</span></h4>
                <table class="table table-sm striped">
                    <thead>
                        <th>Transaction ID</th>
                        <th class="text-right">Total DCR</th>
                        <th class="text-right">Fee</th>
                        <th>Size</th>
                    </thead>
                    <tbody>
                        {{ range .Tickets}}
                        <tr>
                            <td class="break-word">
                                <span>
                                    <a class="hash" href="/explorer/tx/{{.TxID}}">{{.TxID}}</a>
                                </span>
                            </td>
                            <td class="text-right dcr mono fs15">{{ .FormattedTotal}}</td>
                            <td class="mono fs15 text-right">{{.Fee}}</td>
                            <td class="mono fs15">{{.FormattedSize}}</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
            </div>
        </div>

        {{if .Revocations}}
        <div class="row">
            <span class="achor" id="revocations"></span>
            <div class="col-md-12">
                <h4><span>Revocations</span></h4>
                <table class="table table-sm striped">
                    <thead>
                        <th>Transaction ID</th>
                        <th class="text-right">Total DCR</th>
                        <th class="text-right">Fee</th>
                        <th>Size</th>
                    </thead>
                    <tbody>
                        {{ range .Revs}}
                        <tr>
                            <td class="break-word">
                                <span>
                                    <a class="hash" href="/explorer/tx/{{.TxID}}">{{.TxID}}</a>
                                </span>
                            </td>
                            <td class="dcr mono fs15 text-right">{{ .FormattedTotal}}</td>
                            <td class="mono fs15 text-right">{{.Fee}}</td>
                            <td class="mono fs15">{{.FormattedSize}}</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
            </div>
        </div>
        {{end}}

        <div class="row">
            <span class="anchor" id="transactions"></span>
            <div class="col-sm-12">
                <h4><span>Transactions</span></h4>
                <table class="table table-sm striped">
                    <thead>
                        <th>Transaction ID</th>
                        <th class="text-right">Total DCR</th>
                        <th class="text-right">Fee</th>
                        <th>Size</th>
                    </thead>
                    <tbody>
                        {{range .Tx}}
                        <tr>
                            <td class="break-word">
                                <span>
                                    <a class="hash" href="/explorer/tx/{{.TxID}}">{{.TxID}}</a>
                                </span>
                            </td>
                            <td class="dcr mono fs15 text-right">{{.FormattedTotal}}</td>
                            <td class="mono fs15 text-right">{{.Fee}}</td>
                            <td class="mono fs15">{{.FormattedSize}}</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

{{template "footer"}}

</body>
</html>
{{ end }}
